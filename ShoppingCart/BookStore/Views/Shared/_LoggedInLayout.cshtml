@inject AppDbContext db;

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />

    <environment include="Development">
        <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/jquery-validate/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    </environment>

    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="stylesheet" href="fontawesome-free-5.15.3-web/css/all.css"/>

    <title>@ViewBag.Title</title>
</head>

<body>



<div>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">

        <a class="navbar-brand" asp-controller="home" asp-action="index">
            <img src="~/images/logo.png" height="40" width="40" />
        </a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#collapsibleNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="collapsibleNavbar">
            <ul class="navbar-nav">

                <li class="nav-item">
                        <a asp-controller="home" asp-action="index" class="nav-link">Home</a>
                    </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                        <a href="@Url.Action("ViewCart", "Cart")" class="btn btn-dark">
                            <i class="fas fa-shopping-cart"></i><span class="badge">@ViewData["Count"]</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <form method="post" asp-controller="account" asp-action="logout">
                            <button type="submit" class="btn btn-dark" style="width: auto">Logout</button>
                        </form>
                    </li>
            </ul>
        </div>

    </nav>

</div>
    
<div class="container mx-auto">
    <div>
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)
</div>
</body>

</html>
